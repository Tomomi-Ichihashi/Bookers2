 <div class = "error_explanation">
   <h2><%= pluralize(@newbook.errors.count,"error") %> prohibited this book from being saved:</h2>
   <ul>
     <% @newbook.errors.full_messages.each do |message| %>
     <li><%= message %></li>
     <% end %>
   </ul>
 </div>
<% end %>



<%= render 'books/user_info', user:@user, book:@newbook %>


<div class ="book-lists">
  <h1>Books</h1>
  <table class = "table">
    <thead>
      <tr>
        <th></th>
        <th>Title</th>
        <th>Opinion</th>
      </tr>
    </thead>
    <tbody>
      <% @books.each do |book| %>
      <tr>
       <th>
        <%= link_to user_path(book.user) do %>
        <%= attachment_image_tag book.user, :profile_image, :fill, 60, 60, fallback: "no_image.jpg"%>
        <% end %>
       </th>

        <th><%= link_to book.title,"/books/#{book.id}" %></th>
        <th><%= book.body %></th>

      </tr>
        <% end %>
    </tbody>
  </table>
</div>
