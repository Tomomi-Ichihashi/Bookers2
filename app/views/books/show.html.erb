<div class = "book-detail">
  <h1>Book detail</h1>
  <table class = "table">
    <tr>
      <tb><%= attachment_image_tag @user, :profile_image %><br /><%= @user.name %></tb>
      <tb><%= @book.title %></tb>
      <tb><%= @book.body %></tb>
      <tb><%= link_to 'Edit',  edit_book_path(@book.id) %></tb>
      <tb><%= link_to 'Destroy', book_path(@book.id), method: :delete,"data-confirm" => "本当に消しますか？" %></tb>
    </tr>
  </table>
</div>
