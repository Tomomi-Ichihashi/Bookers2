<% if flash[:notice1] %>
 <span class = "text-success"><%= flash[:notice1] %></span>
<% end %>

<div class = "container">
<div class = "row">

<%= render 'books/user_info', user:@user, book:@newbook %>

<div class = "col-md-8 offset-md-1">
  
  <h1>Book detail</h1>
  <table class = "table">
  
   <tbody>
     
    <tr>
      <td>
         <%= link_to user_path(@book.user) do %> 
          <%= attachment_image_tag @user, :profile_image, :fill, 30, 30, fallback: "no_image.jpg", size:'30x30' %><br /><%= @user.name %>
         <% end %>
      </td>
      
      <td><%= link_to @book.title,"/books/#{@book.id}" %></td>
      
      <td><%= @book.body %></td>
    
      <% if @user.id == current_user.id %>
    
       <td><%= link_to 'Edit',  edit_book_path(@book.id), class: "btn btn-success btn-sm" %></td>
    
       <td><%= link_to 'Destroy', book_path(@book.id), method: :delete,"data-confirm" => "本当に消しますか？", class: "btn btn-danger btn-sm"%></td>
      <% end %>    
    </tr>
    
   </tbody>
   
  </table>
</div>

</div>
</div>
