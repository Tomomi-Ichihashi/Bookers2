<% if flash[:notice1] %>
 <p calass = "notice"><%= flash[:notice1] %></p>
<% end %>

<%= render 'books/user_info', user:@user, book:@newbook %>

<div class = "book-detail">
  <h1>Book detail</h1>
  <table class = "table">
    <tr>
    
      <tb>
         <%= link_to user_path(@book.user) do %> 
          <%= attachment_image_tag @user, :profile_image, :fill, 60, 60, fallback: "no_image.jpg" %><br /><%= @user.name %>
         <% end %>
      </tb>
      
      <tb><%= link_to @book.title,"/books/#{@book.id}" %></tb>
      
      <tb><%= @book.body %></tb>
      <% if @user.id == current_user.id %>
       <tb><%= link_to 'Edit',  edit_book_path(@book.id), class: "btn btn-success" %></tb>
       <tb><%= link_to 'Destroy', book_path(@book.id), method: :delete,"data-confirm" => "本当に消しますか？", class: "btn btn-danger"%></tb>
      <% end %>    
    </tr>
  </table>
</div>


