<div class ="container">
<div class ="user-info">
 <h1>User info</h1>
   <%= attachment_image_tag user, :profile_image, :fill, 60, 60, fallback: "no_image.jpg"%>
   <table class = "table">
     <tr>
       <th>name</th>
       <th><%= user.name %></th>
     </tr>
     <tr>
       <th>introduction</th>
       <th><%= user.introduciton%></th>
     </tr>
   </table>
   
   <% if user.id == current_user.id %>
   <p><%= link_to 'Edit', edit_user_path(current_user.id),class: "btn btn-secondary" %></p>
   <% else %>
   <p><%= link_to 'Edit', user_path(current_user.id),class: "btn btn-secondary" %></p>
   <% end %>
    
 </div>

<div class ="new-book">
  <h1>New Book</h1>    
  <%= form_with model:book, local:true do |f| %>
  
  <h4>Title</h4>
  <%= f.text_field :title %>
  
  <h4>Opinon</h4>
  <%= f.text_area :body %>
  
  <%= f.submit 'Create Book' %>
  
  <% end %>
 </div>
</div>


