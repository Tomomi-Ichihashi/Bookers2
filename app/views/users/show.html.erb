<% if flash[:notice2] %>
 <p class = "notice"><%= flash[:notice2] %> </p>
<% end %>

<%= render 'books/user_info', user:@user, book:@book %>

<div class ="book-lists">
  
  <h1>Books</h1>
  <table class = "table">
    <thead>
      <tr>
        <th></th>
        <th>Title</th>
        <th>Opinion</th>
      </tr>
    </thead>
    <tbody>
      <% @books.each do |book| %>
      <tr>
        
        <th><%= attachment_image_tag @user, :profile_image, :fill, 60, 60, fallback: "no_image.jpg"%></th>
        <th><%= link_to book.title,"/books/#{book.id}" %></th>
        <th><%= book.body %></th>
       
      </tr>
        <% end %> 
    </tbody>
  </table>
</div>
