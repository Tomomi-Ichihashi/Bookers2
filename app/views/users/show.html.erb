<% if flash[:notice2] %>
 <span class = "text-success"><%= flash[:notice2] %></span>
<% end %>

<div class = "container">
<div class = "row">

<%= render 'books/user_info', user:@user, book:@newbook %>

<div class ="col-md-8 offset-md-1">
  
  <h1>Books</h1>
  <table class = "table">
    <thead>
      <tr>
        <th></th>
        <th>Title</th>
        <th>Opinion</th>
      </tr>
    </thead>
    <tbody>
      <% @books.each do |book| %>
      <tr>
        <td>
          <%= link_to user_path(book.user) do %>
           <%= attachment_image_tag @user, :profile_image, :fill, 30, 30, fallback: "no_image.jpg", size:'30x30'%>
          <% end %>
        </td>
        <td><%= link_to book.title,"/books/#{book.id}" %></td>
        <td><%= book.body %></td>
       
      </tr>
        <% end %> 
    </tbody>
  </table>
</div>
</div>
</div>