<!DOCTYPE html>
<html>
  <head>
    <title>Bookers2</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
    <meta name = "viewport" content = "widh=device-width, initial-scale=1, maximum-scale=1">

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
   <header class = "bg-dark text-white">
    
    <nav class = "navbar navbar-expand-lg navbar-dark">
     <div class = "container">
      
      <a href= "/" class = "text-white"><h5>Bookers</h5></a>
     
      <button class = "navbar-toggler" type = "button" data-toggle = "collapse" data-target = "#navbarNavDropdown" aria-controls = "navbarNavDropdown" aria-expanded = "false" aria-label = "Toggle navigation">
       <span class = "navbar-toggler-icon"></span>
      </button>
      
      <div class = "collapse navbar-collapse" id = "navbarNavDropdown">
       
       <ul class = "navbar-nav ml-auto">
        
       <% if user_signed_in? %>
     
       <li class = "nav-item">
         <%= link_to user_path(current_user.id) do %>
          <span class = 'nav-link text-white'><i class="fas fa-home"></i> Home</span>
         <% end %>
        </li>
        
        <li class = "nav-item">
         <%= link_to users_path do %>
           <span class = 'nav-link text-white'><i class="fas fa-users"></i> Users</span>
         <% end %>
        </li>
        
        <li class = "nav-item">
         <%= link_to books_path do %>
          <span class = 'nav-link text-white'><i class="fas fa-book-open"></i> Books</span>
         <% end %>
        </li>
     
     
        <li class = "nav-item">
         <%= link_to destroy_user_session_path, method: :delete do %>
          <span class = 'nav-link text-white'><i class="fas fa-sign-out-alt"></i> logout</span>
         <% end %>
        </li>
     
       <% else %>
     
        <li class = "nav-item">
         <%= link_to root_path do %>
          <span class = 'nav-link text-white'><i class="fas fa-home"></i> Home</span>
         <% end %>
        </li>
     
        <li class = "nav-item">
         <%= link_to home_about_path do %>
          <span class = 'nav-link text-white'><i class="fas fa-link"></i> About</span>
         <% end %>
        </li>
    
        <li class = "nav-item">
         <%= link_to new_user_registration_path do %>
          <span class = 'nav-link text-white'><i class="fas fa-user-plus"></i> sign up</span>
         <% end %>
        </li>
        
        <li class = "nav-item">
         <%= link_to new_user_session_path do %>
         <span class = 'nav-link text-white'><i class="fas fa-sign-in-alt"></i> login</span>
         <% end %>
        </li>
        
       <% end %>
    
       </ul>
      </div>
     </div>
    </nav>
   </header>
   
   <main class = "mb-auto">
    
    <% if flash[:notice] %>
     <span class = "text-success"><%= flash[:notice] %></span
    <% end %>
    
    <%= yield %>
    
   </main>
   
   <footer>
    <div class = "container">
     <p class = "text-center">Copy Right Infratop.inc</p>
    </div>
   </footer>
  </body>
</html>

